---
import "/src/styles/global.css";
import Header from "../components/Header.svelte";
import Footer from "../components/Footer.svelte";

// Recibe la prop 'title' desde la página que lo use
const { title = "El Baúl del Friki" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<!-- Título dinámico -->
		<title>
			{title ? `${title} - El Baúl del Friki` : "El Baúl del Friki"}
		</title>
	</head>
	<body>
		<Header client:load />
		<slot />
		<Footer />
	</body>
</html>

<style>
	:global(body) {
		background-color: #f5f3f5;
		color: #212120;
	}
	:global(.dark body) {
		background-color: #212120;
		color: #f5f3f5;
	}
</style>
