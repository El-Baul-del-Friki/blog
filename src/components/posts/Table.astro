---
const { title, headers = [] } = Astro.props;
---

<div class="my-8">
	{
		title && (
			<h2 class="text-lg font-semibold text-gray-800 dark:text-gray-100 mb-4">
				{title}
			</h2>
		)
	}

	<div
		class="relative overflow-x-auto border border-gray-200 dark:border-gray-700 rounded-lg"
	>
		<table
			class="w-full text-sm text-left text-gray-700 dark:text-gray-300"
		>
			{
				headers.length > 0 && (
					<thead class="text-xs uppercase bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-300">
						<tr>
							{headers.map((h) => (
								<th
									scope="col"
									class="px-4 py-3 whitespace-nowrap"
								>
									{h}
								</th>
							))}
						</tr>
					</thead>
				)
			}
			<tbody
				class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700"
			>
				<slot />
			</tbody>
		</table>
	</div>
</div>
